#include "charybdis.dtsi"

/ {
    chosen {
        zmk,pointing = &trackball;
    };
};

&trackball {
    status = "okay";
    // cs-gpios = <&gpio0 20 GPIO_ACTIVE_LOW>; // <-- この行を削除（またはコメントアウト）
    irq-gpios = <&gpio0 6 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>; // これは残す
    evt-type = <2>;
    x-input-code = <0>;
    y-input-code = <1>;
};
