// config/boards/shields/charybdis_old/charybdis_right.overlay

#include "charybdis.dtsi"

/ {
    chosen {
        zmk,kscan = <&kscan0>;
        zmk,pointing = <&trackball>;
    };
};

// 1. kscan の「列」定義（あなたの設定）
&kscan0 {
	col-gpios
		= <&gpio0 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
		, <&gpio0 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
		, <&gpio0 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
		, <&gpio1 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
		, <&gpio0 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
		, <&gpio1 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
		;
};

// 2. SPIバスとトラックボールの完全な定義
&spi0 {
    // ↓↓↓↓ 正しいラベル名に戻します ↓↓↓↓
    pinctrl-0 = <&spi0_default>;       // "spi0_pins" -> "spi0_default"
    pinctrl-1 = <&spi0_sleep>;         // "spi0_sleep_pins" -> "spi0_sleep"
    // ↑↑↑↑ ここまでが修正箇所 ↑↑↑↑
    
    pinctrl-names = "default", "sleep";
    status = "okay"; // SPIバスを有効化

    trackball: trackball@0 {
        compatible = "pixart,pmw3610";
        reg = <0>;
        label = "TRACKBALL";
        spi-max-frequency = <2000000>;
        duplex = <2048>;
        status = "okay"; 

        // 必須項目
        cs-gpios = <&gpio0 20 GPIO_ACTIVE_LOW>; 
        irq-gpios = <&gpio0 6 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        evt-type = <2>;
        x-input-code = <0>;
        y-input-code = <1>;
    };
};
