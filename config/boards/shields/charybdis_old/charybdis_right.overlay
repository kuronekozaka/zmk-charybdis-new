#include "charybdis.dtsi" // Include the base DTS

/ {
    chosen {
        zmk,pointing = &trackball;
    };
};

&trackball {
    status = "okay";
    cs-gpios = <&gpio0 20 GPIO_ACTIVE_LOW>;
    irq-gpios = <&gpio0 6 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
    evt-type = <2>; // <-- INPUT_EV_REL の代わりに、直接「2」を指定
};
